<%- include('../layouts/header.ejs') %>
<%- include('../layouts/navbar.ejs') %>
<%- include('../layouts/sidebar.ejs') %>

<!-- CSS -->
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.25/css/jquery.dataTables.min.css">

<!-- JavaScript/jQuery -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>

<script>
  $(document).ready(function() {
  $('#myTable').DataTable();
});

</script>

<div class="main-panel">
    <div class="content-wrapper">
      <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
          <div class="card">
            <div class="card-body">
              <h4 class="card-title">Product Offer Management</h4>
              <div class="row justify-content-end">
                
              </div>                  
    <div class="table-responsive">
      <table id="myTable" class="table table-striped">
        <thead>
          <tr>
            <th scope="col" class="text-center">SI.No</th>
            <th scope="col" class="text-center">Product Name</th>
            <th scope="col" class="text-center">Price</th>
            <th scope="col" class="text-center">Discount Price</th>
            <th scope="col" class="text-center">Discount Percentage</th>
            <th scope="col" class="text-center">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% offer.forEach((offers,index) => { %>
          <tr>
            <td class="text-center"><%= index+1 %></td>
            <td class="text-center"><%= offers.name %></td>
            <td class="text-center"><%= offers.price %></td>
            <td class="text-center"><%= offers.discountPrice %></td>
            <td class="text-center"><%= offers.discount %></td>
            <td class="text-center">
            <!-- <button type="button" class="btn btn-danger" onclick="location.href='/admin/editProOffer/<%= offers._id %>'">Edit</button> -->
            <a type="button"onclick="location.href='/admin/editProOffer/<%= offers._id %>'" ><svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="Green" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-edit">
              <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
              <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
            </svg>
          </a>
              <% if (offers.offerStatus==true) { %>
                <!-- <a href="/admin/deleteProOffer?id=<%=offers._id%>"><button type="button" class="btn btn-secondary">Disable</button></a> -->
              <% } else { %>
                <!-- <a href="/admin/deleteProOffer?id=<%=offers._id%>"><button type="button" class="btn btn-primary">Enable</button></a> -->
              <% } %>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </section>


<%- include('../layouts/footer.ejs') %>