      <div class="main-panel">
        <div class="content-wrapper">
          <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">CATEGORY</h4>
                  <div class="row justify-content-end">
                    <div class="col-auto">
                      <a href="/admin/addCategory"><button type="button" class="btn btn-primary">Add Category</button></a>
                    </div>
                  </div>                  
                  <div class="table-responsive">
                    <table class="table table-striped">
                      <thead>
                        <tr>
                          <th class="text-center">
                            No.
                          </th>
                          <th class="text-center">
                            Category Name
                          </th>
                          <th class="text-center">
                            Description
                         </th>
                          <th class="text-center">
                            Action
                          </th>
                        </tr>
                      </thead>
                      <tbody>
                        <% if (category.length > 0) { %>
                          <% for (let i = 0; i < category.length; i++) { %>
                              <tr>
                                <td class="text-center"><%= i + 1 %></td>
                             <td class="text-center"><%= category[i].name%></td>
                                <td class="text-center"><%= category[i].description %></td>
                                <td style="display: flex;justify-content: center;"> 
                                  <!-- <a  href="/admin/editCategory?id=<%= category[i]._id %>" class="table-link text-info">
                                    <button  type="button" onclick="deleteC('<%= category[i]._id %>')" class="btn btn-success btn-sm ">edit</button>
                                  </a>   -->
                                  
                                  
                                  <a onclick="deleteC('<%= category[i]._id %>')" href="/admin/editCategory?id=<%= category[i]._id %>"><svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="Green" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-edit">
                                    <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                                    <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                                  </svg>
                                </a>
            
                              

                                
                                  <% if (category[i].status) { %>
                                    
                                    <!-- <a type="button" class="btn btn-danger btn-sm " href="/admin/categoryControl?id=<%= category[i]._id %>">Block</a> -->
                                    <a style="text-decoration: none;" type="button" class="text-danger ml-1" href="/admin/categoryControl?id=<%= category[i]._id %>">
                                      <span class="material-symbols-outlined">
                                      block
                                      </span>
                                      <!-- <p>Block</p>  -->
                                    </a>
                                  <% } else { %>
                                    <!-- <a type="button" class="btn btn-success btn-sm " href="/admin/categoryControl?id=<%= category[i]._id %>">UnBlock</a> -->
                                    <a style="text-decoration: none;" type="button" class="text-success ml-1" href="/admin/categoryControl?id=<%= category[i]._id %>">
                                      <span class="material-symbols-outlined">
                                        check_circle
                                        </span>
                                        <!-- <p>Unblock</p> -->
                                    </a>
                                  <% } %> 
                                </td>
                              </tr>
                          <% } %>
                        <% } else { %>
                          <tr> 
                            <td colspan="5" class="alert alert-danger">Category Not Found</td>
                          </tr>
                        <% } %>
                      </tbody>
                      
                    </table>
                  </div>
                </div>
              </div>
            </div>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/2.1.0/sweetalert.min.js"></script>
<script>
    const deleteButtons = document.querySelectorAll('.delete-btn');
    deleteButtons.forEach(button => {
        button.addEventListener('click', (event) => {
            event.preventDefault();
            const deleteUrl = button.getAttribute('href');
            swal({
                title: "Are you sure?",
                text: "Once deleted, you will not be able to recover this user!",
                icon: "warning",
                buttons: true,
                dangerMode: true,
            })
            .then((willDelete) => {
                if (willDelete) {
                    window.location.href = deleteUrl;
                }
            });
        });
    });
</script>
