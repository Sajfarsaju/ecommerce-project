<%- include('../layouts/header.ejs') %>

<form action="/verifyReset" method="POST">
  <div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
      <div class="content-wrapper d-flex align-items-center auth px-0">
        <div class="row w-100 mx-0">
          <div class="col-lg-4 mx-auto">
            <div class="auth-form-light text-left py-5 px-4 px-sm-5">
              <div class="brand-logo">
                <img src="/assets/images/logo.svg" alt="logo">
              </div>
              <h4>RESET PASSWORD</h4>
              <h6 class="font-weight-light">ENTER OTP</h6>
              <form class="pt-3">
                <div class="form-group">
                  <input type="text" class="form-control form-control-lg" id="otp" name="otp" placeholder="enter the otp" required>
                </div>
                <form class="pt-3">
                  <div class="form-group">
                    <input type="password" class="form-control form-control-lg" id="password" name="password" placeholder="enter new password" required>
                  </div>
                  <form class="pt-3">
                    <div class="form-group">
                      <input type="password" class="form-control form-control-lg" id="confirmpassword" name="confirmpassword" placeholder="confirm your password" required>
                    </div>
                <div class="mt-3">
                  <button class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" type="submit">SUBMIT</button>
                </div>
                <div class="my-2 d-flex justify-content-between align-items-center">
              </form>
            </div>
          </div>
        </div>
      </div>
      <!-- content-wrapper ends -->
    </div>
    <!-- page-body-wrapper ends -->
  </div>
  </form>

<%- include('../layouts/user/footer.ejs') %>