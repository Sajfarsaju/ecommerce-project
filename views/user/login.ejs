<%- include('../layouts/header.ejs') %>

<form action="" method="POST">
  <div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
      <div class="content-wrapper d-flex align-items-center auth px-0">
        <div class="row w-100 mx-0">
          <div class="col-lg-4 mx-auto">
            <div class="auth-form-light text-left py-5 px-4 px-sm-5">
              <!-- <div class="brand-logo">
                <img src="/assets/images/logo.svg" alt="logo">
              </div> -->
              <h4  style="color: #71cd14cf;">Hello! let's get started</h4>
              <h6 class="font-weight-light"  style="color: #71cd14cf;">Sign in to continue..</h6>
              <form class="pt-3">
                <div class="form-group">
                  <input type="email" class="form-control " id="email" name="email" style="border-radius: 0px; font-size: 17px; border: #71cd1494 solid 1px; height: 50px;" placeholder="Username">
                </div>
                <div class="form-group">
                  <input type="password" class="form-control " id="password" name="password" style="border-radius: 0px; font-size: 17px; border: #71cd1494 solid 1px; height: 50px;" placeholder="Password">
                </div>
                <% if (typeof message !== 'undefined') { %>
                  <div class="text-danger">
                    <%= message %>
                  </div>
                <% } %>

                <% if (typeof msg !== 'undefined') { %>
                  <div class="text-danger">
                    <%= msg %>
                  </div>
                <% } %>
                
                
                <div class="mt-3">
                  <button class="btn btn-block font-weight-medium" style="background: #71cd14d7;color: white;   border: 1px solid #71cd14af; border-radius: 3px;" type="submit">SIGN IN</button>
                </div>
                <div class="my-2 d-flex justify-content-between align-items-center">
                  <div class="form-check">
                  </div>
                  <a href="/resetPassword" class="text-dark" >Forgot password?</a>
                </div>
                <!-- <div class="mb-2">
                  <button type="button" class="btn btn-block btn-facebook auth-form-btn">
                    <i class="mdi mdi-facebook mr-2"></i>Connect using facebook
                  </button>
                </div> -->
                <div class="text-center mt-4 font-weight-light">
                  Don't have an account? <a href="/signup"  style="color: #6bd303;">Create</a>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
      <!-- content-wrapper ends -->
    </div>
    <!-- page-body-wrapper ends -->
  </div>
  </form>

<%- include('../layouts/footer.ejs') %>