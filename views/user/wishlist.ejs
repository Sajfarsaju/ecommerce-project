<form class="bg0 p-t-75 p-b-85 mb-5">
  <div class="cart-wrap">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
         
          <% if(user.wishlist.length === 0) { %>
            <div class="wishlist-empty-message" style="margin-bottom: 100px;">
              <i class="far fa-frown"></i>
              <h2>Oops! Your wishlist is empty.</h2>
              <p>There are no items in your wishlist at the moment.</p>
             
                <!-- <div>
                  <span  class="material-symbols-outlined">
                    <a style="text-decoration: none;color: black;" href="/cart" class="wishlist-empty-message" >
                   
                    arrow_forward
                  </a>
                  
                    </span>
                  </div>
                    <a style="text-decoration: none;color: black;" href="/cart" >Go to Cart</p> -->
            </div>

            </div>
          <% } else { %>
            <div class="table-wishlist">
              <table cellpadding="0" cellspacing="0" border="0" width="100%">
                <thead>
                  <tr>
                    <th width="45%">Product Name</th>
                    <th width="15%">Unit Price</th>
                    <th width="15%">Stock Status</th>
                    <th width="15%"></th>
                    <th width="10%"></th>
                  </tr>
                </thead>
                <tbody>
                  <% user.wishlist.forEach(function(x) { %>
                    <tr>
                      <td width="45%">
                        <div class="display-flex align-center">
                          <div class="img-product">
                            <img src="/productImages/<%= x.product.image[0] %>" alt="" class="mCS_img_loaded">
                          </div>
                          <div class="name-product">
                            <%= x.product.name %>
                          </div>
                        </div>
                      </td>
                      <td width="15%" class="price">â‚¹<%= x.product.price %></td>
                      <% if(x.product.stock==0) {%>
                        <td width="15%"><span class="in-stock-box">Out of stock</span></td>
                        <% }else { %>
                      <td width="15%"><span style="background-color: green;" class="in-stock-box">
                        <!-- <%= x.product.stock %> -->
                        In Stock
                      </span></td>
                       <% } %>
                      <td>
                        <div onclick="addToCart('<%=x.product._id%>','<%=x.product.stock%>','<%=x.product.price%>')" type="button" class="main_btn text-decoration-none btn-addwish-b2 " >
                          Add to Cart
                        </div>
                      </td>
                      <td onclick="deleteWishlist('<%=x.product._id%>')" width="10%" class="text-center"><a href="#" class="trash-icon"><i class="far fa-trash-alt"></i></a></td>
                    </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
  </form>
  
  

  <script>
    function addToCart(proId,stock,price) {
      // Check the stock availability of the product
      if (`${stock}` > 0) {
        // Stock is available, add the product to the cart
        $.ajax({
          url: '/addToCart',
          data: {
            productId: proId,
            productPrice: price
          },
          method: "post",
          success: (response) => {
            if (response.success) {
              $('.bg0').load('/wishlist .bg0')
              console.log(response);
              Swal.fire({
                title: 'Added',
                text: 'Item added to Cart',
                icon: 'success',
                timer: 1000,
                showConfirmButton: false
              })
            } else {
              Swal.fire({
                text: 'Item already in Cart',
                icon: 'info',
                timer: 1000,
                showConfirmButton: false
              })
            }
          }
        })
      } else {
        // Stock is not available, show an error message
        Swal.fire({
          text: 'Item is out of stock',
          icon: 'error',
          timer: 1000,
          showConfirmButton: false
        })
      }
    }
    </script>

