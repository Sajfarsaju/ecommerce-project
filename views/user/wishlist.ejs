<script>
  function deleteWishlist(proId) {
    console.log(proId);
    Swal.fire({
      title: 'Are you sure?',
      text: "You wan't to remove item!",
      icon: 'warning',
      showCancelButton: true,
      confirmButtonColor: '#3085d6',
      cancelButtonColor: '#d33',
      confirmButtonText: 'yes, remove!'
    }).then((result) => {
      if (result.isConfirmed) {
        $.ajax({
          url: '/deleteWishlist',
          data: {
            productId: proId
          },
          method: "post",
          success: (response) => {
            $('.bg0').load('/wishlist .bg0')
            console.log(response);
            Swal.fire({
              title: 'removed!',
              text: 'Item removed from wishlist',
              icon: 'success',
              timer: 1000,
              showConfirmButton: false
            })
            //   setTimeout(() => {
            //   location.reload()
            //   }, 1000);
          }
        })
      }
    })
  }
</script>

