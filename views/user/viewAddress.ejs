
<%- include('../layouts/user/header.ejs') %>
<%- include('../layouts/user/navbar.ejs') %>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">


<section class="" style="margin: 100px; border: 1px black;  ">
  <a type="button" class="btn btn-outline-success  mb-2" href="/addAddress">Add Address</a>

  <table class="table align-middle mb-0 bg-white">
    <thead class="bg-light">
      <tr>
        <th>No</th>
        <th>Name</th>
        <th>Address</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody id="address">
      <% user.address.forEach((x,index)=>{%>
      <tr>
        <th scope="row"><%= index+1 %></th>

        <td>
          <p class="fw-normal mb-1"><%= x.name %></p>
        </td>

        <td><%= x.housename %>,<%= x.street %>,<%= x.district %>,<%= x.state %>,<%= x.pincode %>,<%= x.country %>,<%= x.phone %></td>

        <td>

          <!-- Button trigger modal -->
          <button type="button" class="btn btn-outline-success  btn-sm btn-rounded" data-toggle="modal" data-target="#<%=x._id %>">
            Edit
          </button>

          <!-- Modal -->
          <div class="modal fade" id="<%=x._id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title font-weight-bold " id="exampleModalLabel">Edit Address</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  <form class="mb-0" action="/viewAddress/<%=x._id %>" method="post">
                    <style>
                      input::-webkit-outer-spin-button,
                      input::-webkit-inner-spin-button {
                        -webkit-appearance: none;
                        margin: 0;
                      }
                    </style>

                    <div class="row mt-3 mb-4">
                      <div class="col">
                        <div class="form-outline">
                          <input type="text" id="form9Example1" class="form-control input-custom" name="Name" value="<%= x.name %>" />
                          <label class="form-label" for="form9Example1">name</label>
                        </div>
                      </div>
                      <div class="col">
                        <div class="form-outline">
                          <input type="text" id="form9Example1" class="form-control input-custom" name="Housename" value="<%= x.housename %>" />
                          <label class="form-label" for="form9Example1">housename</label>
                        </div>
                      </div>
                    </div>
                    <div class="row mb-4">
                      <div class="col">
                        <div class="form-outline">
                          <input type="text" id="form9Example1" class="form-control input-custom" name="Street" value="<%= x.street %>" />
                          <label class="form-label" for="form9Example1">street</label>
                        </div>
                      </div>

                      <div class="col">
                        <div class="form-outline">
                          <input type="text" id="form9Example1" class="form-control input-custom" name="District" value="<%= x.district %>" />
                          <label class="form-label" for="form9Example1">district</label>
                        </div>
                      </div>
                    </div>

                    <div class="row mb-4">
                      <div class="col">
                        <div class="form-outline">
                          <input type="text" id="form9Example1" class="form-control input-custom" name="State" value="<%= x.state %>" />
                          <label class="form-label" for="form9Example1">state</label>
                        </div>
                      </div>

                      <div class="col-6 mb-4">
                        <div class="form-outline">
                          <input type="text" id="form9Example1" min="1" inputmode="numeric" class="form-control input-custom" name="Pincode" value="<%= x.pincode %>" />
                          <label class="form-label" for="form9Example1">pincode</label>
                        </div>
                      </div>

                      <div class="col-6 mb-4">
                        <div class="form-outline">
                          <input type="text" id="form9Example1" class="form-control input-custom" name="Country" value="<%= x.country %>" />
                          <label class="form-label" for="form9Example1">country</label>
                        </div>
                      </div>

                      <div class="col-6 mb-4">
                        <div class="form-outline">
                          <input type="number" min="1" inputmode="numeric" id="form9Example1" class="form-control input-custom" name="Phone" value="<%= x.phone %>" />
                          <label class="form-label" for="form9Example1">phone</label>
                        </div>
                      </div>
                    </div>

                    <% if(typeof message!=="undefined"){%>
                    <h1 style="font-size:16px;color:rgb(156, 2, 2);"><%=message %></h1>
                    <%}%>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                  <button type="submit"  class="btn btn-primary">Save changes</button>
                </div>  
              </form>
              </div>
            </div>
          </div>
          </a>
          <button onclick="removeAddress('<%=x._id%>')" type="button" class="btn btn-outline-danger btn-sm btn-rounded">remove</button>
        </td>
      </tr>
      <% })  %>

    </tbody>
  </table>

</section>


<script>
  function removeAddress(addId) {
    console.log(addId);
    Swal.fire({
      title: 'Are you sure?',
      text: "You wan't to remove your address!",
      icon: 'warning',
      showCancelButton: true,
      confirmButtonColor: '#3085d6',
      cancelButtonColor: '#d33',
      confirmButtonText: 'yes, remove!'
    }).then((result) => {
      if (result.isConfirmed) {
        console.log(addId);
        $.ajax({
          url: '/removeAddress',
          data: {
            addressId: addId
          },
          method: "post",
          success: (response) => {
            $('.table').load('/viewAddress .table')

            console.log(response);
            Swal.fire({
              title: 'removed!',
              text: 'Adress removed',
              icon: 'success',
              timer: 1000,
              showConfirmButton: false
            })
            //   setTimeout(() => {
            //   location.reload()
            //   }, 1000);
          }
        })
      }
    })
  }
</script>


