<%- include ('../layouts/user/header.ejs') %>
<%- include ('../layouts/user/navbar.ejs') %>

<div class="container-fluid">
<div class="row mt-3 mx-auto" style="margin-top: 250px; border: darkgoldenrod;">
 
    <div class="col-md-9 justify-content-center">
      <div class="card card-custom pb-4  m-t-100  m-b-50">
        <div class="card-body mt-0 mx-5">
          <div class="text-center mb-3 pb-2 mt-3">
            <h4 style="color: #495057 ;">Add address</h4>
          </div>
  
          <form class="mb-0" method="post">
  
            <div class="row mb-4">
              <div class="col">
                <div class="form-outline">
                  <input type="text" id="form9Example1" class="form-control input-custom" name="Name" pattern="[a-zA-Z\s]+" placeholder="name"/>
                  <label class="form-label" for="form9Example1"></label>
                </div>
              </div>
              <div class="col">
                <div class="form-outline">
                  <input type="text" id="form9Example1" class="form-control input-custom" name="Housename" placeholder="housename" pattern="[a-zA-Z\s]+" required>
                  <label class="form-label" for="form9Example1"></label>
                </div>
                
              </div>
            </div>
            <div class="row mb-4">
              <div class="col">
                <div class="form-outline">
                    <input type="text" id="form9Example1" class="form-control input-custom" name="Street"  pattern="[a-zA-Z\s]+"  placeholder="street"/>
                    <label class="form-label" for="form9Example1"></label>
                </div>
              </div>
              <div class="col">
                <div class="form-outline">
                    <input type="text" id="form9Example1" class="form-control input-custom" name="District" pattern="[a-zA-Z\s]+"   placeholder="district"/>
                    <label class="form-label" for="form9Example1"></label>
                </div>
              </div>
            </div>
            <div class="row mb-4">
              <div class="col">
                <div class="form-outline">
                    <input type="text" id="form9Example1" class="form-control input-custom" name="State"  pattern="[a-zA-Z\s]+"  placeholder="state"/>
                    <label class="form-label" for="form9Example1"></label>
                </div>
              </div>
              <div class="col">
                <div class="form-outline">
                    <input type="text" id="form9Example1" class="form-control input-custom" name="Pincode"    placeholder="pincode"/>
                    <label class="form-label" for="form9Example1"></label>
                </div>
              </div>
              <div class="col">
                <div class="form-outline">
                    <input type="text" id="form9Example1" class="form-control input-custom" name="Country"   pattern="[a-zA-Z\s]+" placeholder="country"/>
                    <label class="form-label" for="form9Example1"></label>
                </div>
              </div>
              <div class="col">
                <div class="form-outline">
                    <input type="text" id="form9Example1" class="form-control input-custom"  name="Phone"   placeholder="phone"/>
                    <label class="form-label" for="form9Example1"></label>
                </div>
              </div>
            </div>
  
                <% if(typeof message!=="undefined"){%>
                  <h1 style ="font-size:16px;color:rgb(156, 2, 2);"><%=message %></h1>
                  <%}%>

            <div class="float-right ">
              <!-- Submit button -->
              <button type="submit" class="btn btn-outline-success " style="padding-inline: 40px;"
               >submit</button>
            </div>
  
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
