<section class="feature_product_area section_gap_bottom_custom">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-12">
        <div class="main_title">
          <h2><span>Featured product</span></h2>
          <p>Bring called seed first of third give itself now ment</p>
        </div>
      </div>
    </div>

    <div class="row">
      <% productInfo.slice(0,6).forEach(function(x,index) { %>
        <% if(x.status) { %>
        <div class="col-lg-4 col-md-6">
          <div class="single-product">
            <div class="product-img">
                <img class="img-fluid w-100" src="/productImages/<%= x.image[0]%>" alt="" />
              
              <div class="p_icon">
                <a href="/singleProduct?id=<%= x._id %>">
                  <i class="ti-eye"></i>
                </a>
                
                <% if(typeof User!=='undefined') { %>
                  <a href="/login">
                    <!-- <button class="btn-addwish-b2 dis-block pos-relative " onclick="addToWishlist('<%= x._id %>')"> -->
                      <i class="ti-heart"></i>
                    <!-- </button> -->
                    </a>

                    <a href="/login" class="btn-addwish-b2 dis-block pos-relative " >
                      <i class="ti-shopping-cart"></i>
                    </a>
                  <% } else { %>
                <a href="#" onclick="addToWishlist('<%= x._id %>')">
                <!-- <button class="btn-addwish-b2 dis-block pos-relative " onclick="addToWishlist('<%= x._id %>')"> -->
                  <i class="ti-heart"></i>
                <!-- </button> -->
                </a>

                <a href="#" class="btn-addwish-b2 dis-block pos-relative " onclick="addToCart('<%=x._id%>','<%=x.stock%>','<%=x.price%>')">
                  <i class="ti-shopping-cart"></i>
                </a>
                <% } %>

               
              </div>
            </div>
            <div class="product-btm">
              <a href="/singleProduct?id=<%= x._id %>" class="d-block">
                <h4><%= x.name %></h4>
              </a>
              <div class="mt-3">
                <% if (x.discountPrice === x.price || x.discountPrice === 0 ) { %>
                  <span class="mr-4">₹<%= x.price %></span>
                  <% } else if( x.discountPrice > x.price){ %>
                  <span class="mr-4">₹<%= Math.floor(x.proDiscPrice) %><s style="color: grey;">₹<%= x.price %></s></span>
                  <% } else { %>
                  <span class="mr-4">₹<%= Math.floor(x.discountPrice) %><s style="color: grey;">₹<%= x.price %></s></span>
                  <% } %>
              </div>
            </div>
          </div>
        </div>
        <% } %>
      <% }); %>
</section>

<script>
function addToCart(proId,stock,price) {
  // Check the stock availability of the product
  if (`${stock}` > 0) {
    // Stock is available, add the product to the cart
    $.ajax({
      url: '/addToCart',
      data: {
        productId: proId,
        productPrice: price
      },
      method: "post",
      success: (response) => {
        if (response.success) {
          $('.bg0').load('/wishlist .bg0')
          console.log(response);
          Swal.fire({
            title: 'Added',
            text: 'Item added to Cart',
            icon: 'success',
            timer: 1000,
            showConfirmButton: false
          })
        } else {
          Swal.fire({
            text: 'Item already in Cart',
            icon: 'info',
            timer: 1000,
            showConfirmButton: false
          })
        }
      }
    })
  } else {
    // Stock is not available, show an error message
    Swal.fire({
      text: 'Item is out of stock',
      icon: 'error',
      timer: 1000,
      showConfirmButton: false
    })
  }
}
</script>


