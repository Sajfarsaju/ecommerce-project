<script>
  const form = document.getElementById('addckAddress');
  const inputs = form.querySelectorAll('input');

  form.addEventListener('submit', (event) => {
    event.preventDefault();
    let nullFields = false;
    for (let i = 0; i < inputs.length; i++) {
      if (inputs[i].value == '') {
        nullFields = true;
        console.log('All fields are required!!');
        $('#alertDiv').show().html('All fields are required!!');
        setTimeout(() => {
          $('#alertDiv').fadeOut('slow');
        }, 5000);
        break;
      }
    }
    console.log($('#alertDiv'));

    if (!nullFields) {

      const userId = document.getElementById('userId').value;
      const Name = document.getElementById('Name').value;
      const Housename = document.getElementById('Housename').value;
      const Street = document.getElementById('Street').value;
      const District = document.getElementById('District').value;
      const State = document.getElementById('State').value;
      const Phone = document.getElementById('Phone').value;
      const Country = document.getElementById('Country').value;
      const Pincode = document.getElementById('Pincode').value;
      const data = {
        userId,
        Name,
        Housename,
        Street,
        District,
        State,
        Phone,
        Country,
        Pincode
      };
      changePassword(data);
    }
  });

  function changePassword(data) {
    $.ajax({
      url: '/modaldAdAddress',
      data: data,
      method: "post",

      success: function(response) {

        if (response.success) {
          $('.bg0').load('/loadCheckout .bg0')
          $('#alertDiv').removeClass('alert-danger').addClass('alert-success').show().html("Address added successfully");
          setTimeout(() => {
            $('#alertDiv').fadeOut('slow');
            //hide modal
            $('#addAddress').on('hidden.bs.modal', function() {});
            $('#addAddress').modal('hide');
          }, 5000);

        }
      },
      error: function(xhr, status, error) {
        console.error(xhr);
      }
    });
  }
</script>