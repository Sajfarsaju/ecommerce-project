  <script>
    function applycoupon(price, coupon) {


      $.ajax({
        url: '/applycoupon',
        data: {
          total: price,
          code: coupon
        },
        method: 'post',
        success: (response) => {
          console.log(response);
          if (response.used) {
            Swal.fire({
              text: 'Already used',
              icon: 'error',
              tittle: 'Ooops!!!',
              timer: 1000,
              showConfirmButton: false
            })
          } else if (response.available) {
            console.log("hai")
            document.getElementById('code').value = response.Codee
            document.getElementById('discount').innerHTML = response.discount
            document.getElementById('discount1').value = response.discount
            document.getElementById('total').innerHTML = response.cost
            document.getElementById('total1').value = response.cost
            Swal.fire({
              text: 'success',
              icon: 'success',
              tittle: 'coupon applied',
              showConfirmButton: false
            })
          } else if (response.notAvailable) {
            Swal.fire({
              text: 'you should buy somthing more to get this discount',
              icon: 'error',
              tittle: 'Ooops!!!',
              timer: 1000,
              showConfirmButton: false
            })
          } else if (response.expired) {
            Swal.fire({
              text: 'Coupon expired',
              icon: 'error',
              tittle: 'Ooops!!!',
              timer: 1000,
              showConfirmButton: false
            })
          } else if (response.invalid) {
            Swal.fire({
              text: 'Invalid coupon code',
              icon: 'error',
              tittle: 'Ooops!!!',
              timer: 1000,
              showConfirmButton: false
            })
          }
        }
      })
    }
  </script>



